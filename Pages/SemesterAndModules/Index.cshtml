@page
@model POE_ST10084795.Pages.SemesterAndModules.IndexModel

@{
    ViewData["Title"] = "Index of Semesters and Modules";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].SemesterStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].SemesterWeeks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].ModuleCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].ModuleClassHrs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterAndModule[0].ReqSelfStudyHrs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SemesterAndModule)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SemesterStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SemesterWeeks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleCredits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleClassHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReqSelfStudyHrs)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
