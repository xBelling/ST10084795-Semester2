        xmlns:local="clr-namespace:POE_PartOne_ST10084795"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!--Background Image-->
        <Grid>
            <Image Source="/Icons/clock.jpg" Stretch="Fill"/>
        </Grid>
        <!--Splash Screen Text-->
        <TextBlock Text="Time" FontSize="60" FontWeight="Thin" Margin="20,50,0,0"/>
        <TextBlock Text="Mangement" FontSize="60" FontWeight="Thin" Margin="20,110,0,0"/>
        <TextBlock Text="App" FontSize="60" FontWeight="Thin" Margin="20,170,0,0"/>
    </Grid>
</Window>
